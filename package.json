{
  "name": "p2pderivatives-client",
  "version": "0.1.0",
  "private": true,
  "main": "build/browser/electron.js",
  "homepage": "./",
  "files": [
    "gen-grpc"
  ],
  "build": {
    "extends": null,
    "appId": "jp.co.cryptogarage.p2pd.client",
    "files": [
      "build/**/*"
    ]
  },
  "scripts": {
    "preci": "npm link grpc electron typescript && (cd gen-grpc && npm run-script preci)",
    "start": "react-scripts start",
    "build:react": "react-scripts build",
    "build:browser": "tsc -p src/browser",
    "build": "npm run build:react && npm run build:browser",
    "test": "cross-env JEST_JUNIT_OUTPUT_DIR=./reports/jest jest  --reporters=default --reporters=jest-junit",
    "test:ci": "npm run test -- --ci --runInBand",
    "integration-test": "cross-env JEST_JUNIT_OUTPUT_DIR=./reports/jest jest --config jest.config.integration.js --reporters=default --reporters=jest-junit",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"cross-env BROWSER=none PORT=9000 npm start\" \"wait-on http://localhost:9000 && npm run build:browser && electron .\"",
    "dist": "npm run build && electron-builder",
    "lint": "eslint --format junit --output-file ./reports/linter/eslint.xml src test --ext .ts,.tsx ",
    "mocha": "cross-env MOCHA_FILE=./reports/mocha/mocha.xml electron-mocha ./test/*.ts",
    "storybook": "start-storybook"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@date-io/date-fns": "^1.3.13",
    "@fast-csv/parse": "^4.1.2",
    "@grpc/proto-loader": "^0.5.3",
    "@internal/gen-grpc": "file:gen-grpc",
    "@material-ui/core": "^4.9.5",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/lab": "^4.0.0-alpha.45",
    "@material-ui/pickers": "^3.2.10",
    "@types/history": "^4.7.4",
    "@types/js-yaml": "^3.12.2",
    "@types/luxon": "^1.21.0",
    "@types/mui-datatables": "^2.13.4",
    "@types/node": "12.12.14",
    "@types/react-dom": "16.9.4",
    "@types/react-redux": "^7.1.6",
    "@types/react-router": "^5.1.4",
    "@types/react-router-dom": "^5.1.3",
    "axios": "^0.19.2",
    "bitcoin-core": "github:wleev/bitcoin-core#test-version",
    "connected-react-router": "^6.6.1",
