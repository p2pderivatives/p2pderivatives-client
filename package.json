    "electron-better-ipc": "^0.7.0",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^3.0.9",
    "grpc": "^1.24.2",
    "history": "^4.10.1",
    "js-yaml": "^3.13.1",
    "luxon": "^1.24.1",
    "mui-datatables": "^2.14.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-router": "^5.1.2",
